{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Testownik",
  "mainBinaryName": "testo-cross-platform",
  "identifier": "app.cross-platform.testo",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Testownik",
        "width": 800,
        "height": 600,
        "minHeight": 20,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright 2025 Â© Wojciech Kowal",
    "shortDescription": "Wieloplatformowy Testownik",
    "longDescription": "Wieloplatformowy Testownik",
    "android": {
      "minSdkVersion": 24
    }
  }
}
